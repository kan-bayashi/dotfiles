{
  // basic coc.nvim setting
  "suggest.noselect": true,
  "suggest.maxCompleteItemCount": 100,

  // diagnostic language server settings
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "",

  // floating window settings
  "suggest.floatConfig.border": true,
  "suggest.floatConfig.rounded": true,
  "suggest.floatConfig.winblend": 20,
  "suggest.floatConfig.borderhighlight": "CocBorder",
  "diagnostic.floatConfig.border": true,
  "diagnostic.floatConfig.rounded": true,
  "diagnostic.floatConfig.winblend": 20,
  "diagnostic.floatConfig.borderhighlight": "CocBorder",
  "hover.floatConfig.border": true,
  "hover.floatConfig.rounded": true,
  "hover.floatConfig.winblend": 20,
  "hover.floatConfig.borderhighlight": "CocBorder",
  "signature.floatConfig.border": true,
  "signature.floatConfig.rounded": true,
  "signature.floatConfig.winblend": 20,
  "signature.floatConfig.borderhighlight": "CocBorder",

  // nerdfont icon settings
  "suggest.completionItemKindLabels": {
    "function": "󰡱",
    "method": "",
    "variable": "󰫧",
    "constant": "󰏿",
    "struct": "󰙅",
    "class": "",
    "interface": "",
    "text": "",
    "enum": "",
    "enumMember": "",
    "module": "󰅩",
    "color": "",
    "property": "󱌣",
    "field": "󰐾",
    "unit": "",
    "file": "",
    "value": "󰎡",
    "event": "󰗎",
    "folder": "",
    "keyword": "󰎔",
    "snippet": "󱃕",
    "operator": "󰜄",
    "reference": "󰍻",
    "typeParameter": "",
    "default": ""
  },

  // pyright setting
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.linting.flake8Enabled": true,
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.pyenv/shims/black",
  "python.formatting.blackArgs": ["--preview"],
  "python.sortImports.path": "isort",
  "python.sortImports.args": ["--profile", "black"],
  "pyright.organizeimports.provider": "isort",
  "pyright.disableDiagnostics": true,
  "pyright.inlayHints.functionReturnTypes": false,
  "pyright.inlayHints.variableTypes": false,

  // yaml setting
  "yaml.format.enable": true,

  // other settings
  "snippets.ultisnips.pythonPrompt": false,
  "sumneko-lua.enableNvimLuaDev": true,
  "Lua.runtime.version": "Lua 5.1"
}
